{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
      "semi": "error",
      "no-console": 0,
      "no-underscore-dangle": 0,
      "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
      "no-use-before-define": ["error", { "variables": false }],
      "no-multi-str": 0
  },
  "plugins": [
    "security",
    "sonarjs"
  ],
  "extends": [
    "plugin:security/recommended",
    "plugin:sonarjs/recommended"
  ]
}
